@model EventEase1.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Are you sure you want to delete this booking?</h2>

<div>
    <strong>Event:</strong> @Model.Event?.EventName <br />
    <strong>Venue:</strong> @Model.Venue?.VenueName <br />
    <strong>Date:</strong> @Model.BookingDate.ToShortDateString()
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
