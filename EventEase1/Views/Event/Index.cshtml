@model IEnumerable<EventEase1.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h2>Event</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Date</th>
            <th>Venue</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventName</td>
                <td>@item.EventDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(item.Venue != null ? item.Venue.VenueName : "No Venue Assigned")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.EventId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.EventId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
