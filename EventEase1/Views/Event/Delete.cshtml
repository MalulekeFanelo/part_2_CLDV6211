@model EventEase1.Models.Event

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Event</h2>

<p>Are you sure you want to delete this event?</p>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Event Name</dt>
        <dd class="col-sm-10">@Model.EventName</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.EventDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@(@Model.Venue?.VenueName ?? "Not Assigned")</dd>

    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EventId" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}
